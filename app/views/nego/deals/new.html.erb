# encoding: utf-8

<% render_main_header -%>
<%- content_for(:header) do -%>
  <%= stylesheet_link_tag "projects" %>
  <%= stylesheet_link_tag "deals" %>
<%- end -%>

    <nav id="subNav">
      <div class="inner">
        <ul id="localNav">
          <li>
            <%= link_to "#{t('web-app-theme.list', :default => 'List')}", nego_deals_path %>
          </li>
          <li class="current">
            <%= link_to "#{t('web-app-theme.new', :default => 'New')}", new_nego_deal_path %>
          </li>
        </ul>
      </div><!-- /.inner -->
    </nav><!-- /#subNav -->

    <section id="content">
      <div class="inner">
        <header class="pageHeader">
          <h1><%= t('common_label.new_model', :model => Deal.model_name.human) %></h1>
        </header>
        
        <%= form_for :deal, :url => nego_deals_path, :html => {:multipart => true, :class => :form, :method => :post } do |f| -%>
          <% unless flash.blank? -%>
            <div class="errorMsg">
              <% flash.each do |type, message| -%>
                <% if message.is_a?(Enumerable) && message.any? -%>
                  <ul>
                  <% message.each do |msg| -%>
                    <li><%= msg %></li>
                  <% end -%>
                  </ul>
                <% else -%>
                  <p><%= message %></p>
                <% end -%>
                <% if @deal.errors.any? -%>
                  <ul>
                  <% @deal.errors.full_messages.each do |msg| -%>
                    <li><%= msg %></li>
                  <% end %>
                  </ul>
                <% end %>
              <% end -%>
              <% flash.clear %>
            </div>
          <% end %>
          <div class="entryForm">
            <%= render :partial => 'form', :locals => {:f => f} %>
          </div><!-- /.entryForm -->
        <% end -%>
      </div><!-- /.inner -->
    </section><!-- /#content -->

